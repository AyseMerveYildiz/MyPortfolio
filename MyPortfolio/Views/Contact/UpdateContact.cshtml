@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>UpdateContact</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgileri Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ContactId" />
                            <label> İletişim Tercihi </label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label> İletişim Bilgisi </label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label> Birinci Telefon</label>
                            <input type="text" asp-for="Phone1" class="form-control" />
                            <br />
                            <label> İkinci Telefon</label>
                            <input type="text" asp-for="Phone2" class="form-control" />
                            <br />
                            <label> Birincil Mail Adresi</label>
                            <input type="text" asp-for="Email1" class="form-control" />
                            <br />
                            <label>İkincil Mail Adresi</label>
                            <input type="text" asp-for="Email2" class="form-control" />
                            <br />
                            <label>Adres & Şehir</label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <br />
                            <button class="btn btn-success">İletişim Bilgisini Güncelle</button>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>