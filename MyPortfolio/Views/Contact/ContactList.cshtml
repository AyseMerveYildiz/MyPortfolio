@model List<Contact>
@{
	ViewData["Title"] = "ContactList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İletişim</th>
									<th scope="col">İletişim Açıklaması</th>
									<th scope="col">Birincil Telefon</th>
									<th scope="col">İkincil Telefon</th>
									<th scope="col">Birincil Mail Adresi </th>
									<th scope="col">İkincil Mail Adresi </th>
									<th scope="col">Adres& Şehir </th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Phone1</td>
										<td>@item.Phone2</td>
										<td>@item.Email1</td>
										<td>@item.Email2</td>
										<td>@item.Address</td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/AddContact/" class="btn btn-info">Yeni İletişim Bilgisi Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

